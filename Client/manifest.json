{
  "manifest_version": 2,

  "name": "Twitch Chat Ultimate",
  "description": "The ultimate Twitch chat experience",
  "version": "1.0",

  "browser_action": {
    "default_icon": "twitch.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "background" : {
    "scripts" : ["background.js"]
  }
}